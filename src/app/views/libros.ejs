      <div class="contenedor1">
        <div class="contenedorFormulario col-md-6 ">
        <ul class="nav nav-tabs col-md-12">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="">Agregar</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/libros/<%= 'buscar' %>">Buscar</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/libros/<%= 'alterar' %>">Modificar/Borrar</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/libros/<%= 'editoriales' %>">Editoriales</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/libros/<%= 'autores' %>">Autores</a>
          </li>
        </ul>
        <div class="col-md-12 card contenedorInterno">
          <form action="/libros/guardar" method="post" class="card-body">
              <h3 class="card-title">Agregar libro</h3>
              <div class="form-group mt-4">
                <label for="inputAddress" class="form-label">Titulo</label>
                  <input type="text" name="titulo" class="form-control">
              </div>
              <div class="form-group mt-4">
                <label for="inputState" class="form-label">Autor</label>
                <select name="CodAutor" class="form-select">
                  <option selected>Autor</option>
                  <% for(var i = 0;i<autores.length;i++){ %>
                    <option value="<%= autores[i].CodAutor %>"><%= autores[i].Apellido+" "+autores[i].Nombre %></option>
                  <% } %>
                  
                </select>
                
              </div>
              <div class="form-group mt-4 nuevoAutor">
              <label>
                <input type="checkbox" name="autorNuevo" /> Nuevo autor</label>
                <div class="form-group mt-4">
                  <label for="inputAddress" class="form-label">Nombre</label>
                    <input type="text" name="nombreAutorNuevo" class="form-control">
                </div>
                <div class="form-group mt-4">
                  <label for="inputAddress" class="form-label">Apellido</label>
                  <input type="text" name="apellidoAutorNuevo" class="form-control">
              </div>

            </div>
              <div class="form-group mt-4">
                <label for="inputAddress" class="form-label">ISBN</label>
                  <input type="text" name="isbn" class="form-control">
              </div>
              <div class="form-group mt-4">
                <label for="inputState" class="form-label">Editorial</label>
                <select name="CodEditorial" class="form-select">
                  <option selected>Editorial</option>
                  <% for(var i = 0;i<editoriales.length;i++){ %>
                    <option value="<%= editoriales[i].CodEditorial %>"><%= editoriales[i].Editorial %></option>
                  <% } %>
                  
                </select>
                
              </div>
              <div class="form-group mt-4 nuevaEditorial">
                <label>
                  <input type="checkbox" name="editorialNueva" /> Nueva editorial</label>
                  <div class="form-group mt-4">
                    <label for="inputAddress" class="form-label">Nombre</label>
                      <input type="text" name="nombreEditorialNueva" class="form-control">
                  </div>
                  
  
              </div>

            
          <div class="form-group mt-4">
            <label for="inputAddress" class="form-label">AÃ±o de escritura</label>
            <input type="date" name="aescritura" class="form-control">
        </div>
            <div class="text-center">
              <input type="submit" class="btn btn-success btn-lg my-4" value="Guardar">
            </div>
             
          </form>
      </div>
                
     
      </div>
      </div>
    

</body>
